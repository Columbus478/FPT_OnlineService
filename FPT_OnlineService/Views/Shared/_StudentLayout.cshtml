<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="online-images">
       <img id="nav-image" src="~/images/banner625.png" height="80" min-width:inherit; />
       <img id="nav-logo" src="~/images/online_logo.jpg" min-width:inherit; />
   </div>
    <div class="body-content">
        <div class="row">
            <div class="col">
                    @Html.Partial("_LoginPartial")
            </div>
        </div>
        <div class="container body-content">
            <div class="row">
                <div class="col-md-3">
                    <nav class="navbar navbar-default sidebar" role="navigation">
                        <div class="container-fluid">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-sidebar-navbar-collapse-1">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <div class="collapse navbar-collapse" id="bs-sidebar-navbar-collapse-1">
                                <ul class="nav navbar-nav">
                                    <li class="active"><a href="/">Home<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-home"></span></a></li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Request's <span class="caret"></span><span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-user"></span></a>
                                        <ul class="dropdown-menu forAnimate" role="menu">
                                            <li><a href="/Student/">All</a></li>
                                            <li><a href="/Student/New">New</a></li>
                                            <li><a href="/Student/Approved">Approved</a></li>
                                            <li><a href="/Student/Rejected">Rejected</a></li>
                                            <li><a href="/Student/InProgress">In-Progress</a></li>
                                        </ul>
                                    <li><a href="/Staff/Drafts">Drafts<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-th-list"></span></a></li>
                                    <li><a href="/Staff/Trash">Trash<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-tags"></span></a></li>
                                </ul>
                            </div>
                        </div>
                    </nav>

                </div>
                <div class="col-md-9">
                    <div class="row btn-group" style="margin: 2px 15px -2px -16px;">
                        <button type="button" class="btn btn-default" onclick="window.location.reload();">
                            <span class="glyphicon glyphicon-refresh"> Refresh</span>
                        </button>

                    </div>
                    <div class="row btn-group" style="margin: 0 15px -2px -14px;">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <span class="glyphicon glyphicon-plus"> Request </span>
                        </button>
                        <ul class="dropdown-menu pull-right" role="menu">
                            <li><a href="/Forms/CourseRegCreate">Course Registration</a></li>
                            <li><a href="/Forms/SuspendSemesterCreate">Suspend Semester</a></li>
                            <li><a href="/Forms/SuspendSubjectCreate">Suspend Subject</a></li>
                            <li><a href="/Forms/RequestCreate">General Request</a></li>
                            <li><a href="/Forms/DropOutCreate">Drop Out</a></li>
                            <li><a href="#">Form 6</a></li>
                            <li><a href="#">Form 7</a></li>
                            <li><a href="#">Form 8</a></li>
                            <li><a href="#">Form 9</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Trash</a></li>
                        </ul>
                    </div>
                    <div class="row btn-group" style="margin: 0 10px -2px -14px;">
                        <input type="text" name="Search" placeholder=" Enter what to search..." style="width:600px;height:34px" />
                        </div>
                    <div class="row btn-group" style="margin: 2px 15px -2px -16px;">
                        <button type="button" class="btn btn-default">
                            <span class="glyphicon glyphicon-search"> Search</span>
                        </button>

                    </div>
                    <div class="row" style="background-color:#dedede;padding-left:10px;">
                        @RenderBody()
                    </div>
                </div>
                <hr />
                <footer>
                    <p style="text-align:right;">&copy; @DateTime.Now.Year -FU Online Student Service Application</p>
                </footer>
            </div>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </div>
    </div>
</body>
</html>

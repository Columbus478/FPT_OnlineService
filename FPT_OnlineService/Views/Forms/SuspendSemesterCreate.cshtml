@model FPT_OnlineService.Models.SuspendSemesterForm

<!DOCTYPE html>
<br />
<hr />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        <div class="system-form">
    <div class="form-horizontal">
        <h4 class="h4"> Suspend Semester Form.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FormID)

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label(FPT_OnlineService.DAL.UserInfo.Name, "Student Name :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control" type="text" readonly value="@FPT_OnlineService.DAL.UserInfo.Name" />
                </div>
            </div>
            <div class="form-group">
                @Html.Label(FPT_OnlineService.DAL.UserInfo.Username, "Student RollNo :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control" type="text" readonly value="@FPT_OnlineService.DAL.UserInfo.Username" />
                </div>
            </div>
            <div class="form-group">
                @Html.Label(FPT_OnlineService.DAL.UserInfo.Email, "Student Email :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control" type="text" readonly value="@FPT_OnlineService.DAL.UserInfo.Email" />
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.StudentPhone, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.StudentPhone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.StudentPhone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SemesterSeason, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">@Html.DropDownListFor(model => model.SemesterSeason, new SelectList(new List<Object>{
                        new { value = "Spring"+@DateTime.Now.Year , text = "Spring "+@DateTime.Now.Year  },
                        new { value = "Summer"+@DateTime.Now.Year , text = "Summer"+@DateTime.Now.Year },
                        new { value = "Fall"+@DateTime.Now.Year , text = "Fall"+@DateTime.Now.Year}, }, "value", "text"),
                        htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SemesterSeason, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
            </div>
    }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
</body>
</html>

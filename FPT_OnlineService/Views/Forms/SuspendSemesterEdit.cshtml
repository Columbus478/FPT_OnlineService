@model FPT_OnlineService.Models.SuspendSemesterForm

@{
    
}
<br />
<hr />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="">
            <div class="form-horizontal">
                @Html.HiddenFor(model => model.FormID)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.Label(FPT_OnlineService.DAL.UserInfo.Name, "Student Name :", htmlAttributes: new { @class = "control-label col-md-2 required" })
                    <div class="col-md-10">
                        <input class="form-control" type="text" readonly value="@FPT_OnlineService.DAL.UserInfo.Name" />
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label(FPT_OnlineService.DAL.UserInfo.Username, "Student RollNo :", htmlAttributes: new { @class = "control-label col-md-2 required" })
                    <div class="col-md-10">
                        <input class="form-control" type="text" readonly value="@FPT_OnlineService.DAL.UserInfo.Username" />
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label(FPT_OnlineService.DAL.UserInfo.Email, "Student Email :", htmlAttributes: new { @class = "control-label col-md-2 required" })
                    <div class="col-md-10">
                        <input class="form-control" type="text" readonly value="@FPT_OnlineService.DAL.UserInfo.Email" />
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.StudentPhone, htmlAttributes: new { @class = "control-label col-md-2 required" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.StudentPhone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StudentPhone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SemesterName, htmlAttributes: new { @class = "control-label col-md-2 required" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.SemesterName, ViewBag.SemesterName as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SemesterName, "", new { @class = "text-danger" })
                    </div>
                </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
            </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>

@model FPT_OnlineService.Models.CourseRegForm

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>Course Registration Form</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Student Name: ")
        </dt>

        <dd>
            @Html.DisplayName(FPT_OnlineService.DAL.UserInfo.Name)
        </dd>


        <dt>
            @Html.DisplayName("Student RollNo: ")
        </dt>

        <dd>
            @Html.DisplayName(FPT_OnlineService.DAL.UserInfo.Username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Form.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Form.Type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StudentPhone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentPhone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SubjectCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubjectCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Subject)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>
        
    </dl>
</div>
<div>
    <p>
        @if (!FPT_OnlineService.DAL.UserInfo.Username.Equals(null))
        {
            if (FPT_OnlineService.DAL.UserInfo.Role.Equals("Student"))
            {
                @Html.ActionLink("Edit", "Edit","Forms", new { id = Model.FormID }) @:&nbsp;
                @Html.ActionLink("Back to List", "Index","Student")
            }
            else if (FPT_OnlineService.DAL.UserInfo.Role.Contains("Staff"))
            {
                @Html.ActionLink("Forward", "Forward","Staff", new { id = Model.FormID }) @:&nbsp;
                @Html.ActionLink("Reject", "Reject", "Staff", new { id = Model.FormID }) @:&nbsp;
                @Html.ActionLink("Approve", "Approve", "Staff", new { id = Model.FormID }) @:&nbsp;
                @Html.ActionLink("Back to List", "Index","Staff")
            }
        }
    </p>
</div>